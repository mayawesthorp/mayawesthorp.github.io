{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
  "title": {
        "text": "FTSE 100 Company's Individual Share Price Growth and Female Board Representation",
        "subtitle":"Linear regression of 5 year growth and female board representation. Source: FTSE Women Leaders Review & Hargreaves Lansdown",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"
      },
      
   "height": 350,
      "width": 380,
  
  "data": {
    "url": "https://raw.githubusercontent.com/mayawesthorp/mayawesthorp.github.io/main/FTSE100_entiredata.csv",
    "format": {
      "type": "csv"
    }
  },

  "layer": [
    {
      "selection": {
        "picked": {
          "empty": "none",
          "bind": {
            "Sector": {
              "input": "select",
              "options": [
                "No sector selected",
                "Financial Services",
                "Insurance",
                "Basic Resources",
                "Industrial Goods & Services",
                "Food, Beverage & Tobacco",
                "Health Care",
                "Technology",
                "Insurance",
                "Retail",
                "Banks",
                "Consumer Products & Services",
                "Energy",
                "Telecommunications",
                "Construction & Materials",
                "Chemicals",
                "Travel & Leisure",
                "Media",
                "Personal Care, Drug & Grocery Stores",
                "Retail",
                "Real Estate",
                "Utilities"
              ],
              "name": "Select a sector: "
            }
          },
          "type": "single",
          "fields": ["Sector"]
        },
        "grid": {
          "type": "interval",
          "bind": "scales",
          "on": "[mousedown, window:mouseup] > window:mousemove!",
          "translate": "[mousedown, window:mouseup] > window:mousemove!",
          "zoom": "wheel!",
          "resolve": "global"
        }
      },
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
            "field": "Percentage of Women on Boards",
            "type": "quantitative"
          },
          "y": {
            "field": "5 Year Growth",
            "type": "quantitative"
          },

        "color": {
          "value": "lightgrey",
          "condition": {
            "field": "Sector",
            "selection": "picked",
            "type": "nominal",
            "legend": null,
            "scale": {"scheme": "bluepurple"}
          }
        },
        "size": {
          "value": 60,
          "condition": {
            "value": 120,
            "selection": "picked"
          }
        },
        "opacity": {
          "value": 0.8,
          "condition": {
            "value": 1,
            "selection": "picked"
          }
        },
        "tooltip":[
          {
              "field":"Company", 
              "type": "nominal",
              "title": "Company"},
          {
            "field": "Percentage of Women on Boards",
            "type": "quantitative",
            "title": "Percentage of Women on Boards"},
          {
            "field": "5 Year Growth",
            "type": "quantitative",
            "title": "5 Year Growth"}
            ]
      }
    },
    
    {
      "data": {
        "values": [
          {
            "5 Year Growth": "-80",
            "Percentage of Women on Boards": "15"
          },
          {
            "5 Year Growth": "150",
            "Percentage of Women on Boards": "60"
          }
        ]
      },
      "mark": {
        "type": "line",
        "strokeDash": [3,1],
        "color": "darkgrey"
      },
      "encoding": {
        "x": {
          "field": "Percentage of Women on Boards",
          "type": "quantitative"
        },
        "y": {
          "field": "5 Year Growth",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
            "regression": "5 Year Growth",
            "on": "Percentage of Women on Boards",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "purple",
          "x": "width",
          "align": "right",
          "y": 10,
          "size": 13
        },
      "encoding": {
          "text": {"type": "nominal", "field": "R2"}
        }
    }
  ]
}