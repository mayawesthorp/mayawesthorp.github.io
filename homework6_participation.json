{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "width": "container",
    "height": 400,

    "title": {
        "text": "Global Labour Force Participation Rates",
        "subtitle": "Labour force participation rates by country and gender. Source: The World Bank",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},
  
    "data":{
      "url": "https://raw.githubusercontent.com/mayawesthorp/mayawesthorp.github.io/main/geoworld.json",
      "format":{"property": "features"}},
  
          "projection":{
              "type":"naturalEarth1"
          },

          "transform":[
            {
                "lookup":"properties.name",
                "from":{
                    "data":{
                        "url":"https://raw.githubusercontent.com/mayawesthorp/mayawesthorp.github.io/main/homework6_participation.csv"},
                    "key":"Country Name",
                    "fields":["Labour force participation rate","Female labour force participation rate","Male labour force participation rate"]
                    }
                }
          ],
  
          "mark":{
              "type":"geoshape",
              "stroke": "lightgrey",
              "strokeWidth": 1.5
          },
  
          "encoding":{

              "tooltip":[
                {
                    "field":"properties.name", 
                    "type": "nominal",
                    "title": "Country"},
                {"field":"Labour force participation rate"},
                {"field":"Female labour force participation rate", "title": "Female participation rate"},
                {"field":"Male labour force participation rate", "title": "Male participation rate"}
                ],

             "color":{
                "field": "Labour force participation rate",
                "type": "quantitative",
                "scale":{"scheme":"lighttealblue"},
                "legend":{
                    "title":"Labour Force Participation Rate",
                    "orient": "bottom-left",
                    "direction": "horizontal"}
          }
          }
  }

  